{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "outDir": "./schematics",
    "rootDir": "./schematics",
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": ["schematics/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}